# Usage
# file: ~/.gitconfig
#   [include]
#     path = this/file/path/.gitconfig
#   [user]
#     name = hoge
#     email = your@mail.address
#   [core]
#     excludesfile = /your/file/path/.gitignore_global

[color]
  ui = auto
[alias]
  st = status
  onelog = log --oneline --graph
  co = checkout
  br = branch
  ci = commit -v
  fix = commit --amend -v
  fixa = commit --amend -v -a
  ca = commit -v -a
  aa = add .
  k = !gitk
  reh = reset --hard HEAD
  ri  = rebase -i
[push]
  default = matching
[core]
  editor = vim +1 -c 'set fenc=utf-8'
  preloadindex = true
#  excludesfile = .gitignore_global
