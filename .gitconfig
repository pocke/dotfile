# Usage
# file: ~/.gitconfig
#   [include]
#     path = this/file/path/.gitconfig
#   [core]
#     excludesfile = /your/file/path/.gitignore_global

[user]
  name  = Masataka Kuwabara
  email = p.ck.t22@gmail.com

[color]
  ui = auto

[alias]
  st     = status --short --branch
  ol     = log --oneline --graph
  co     = checkout
  br     = branch
  ci     = commit -v
  fix    = commit --amend -v
  fixa   = commit --amend -v -a
  ca     = commit -v -a
  aa     = add .
  reh    = reset --hard
  ri     = rebase -i
  df     = diff
  dc     = diff --cached
  sh     = show
  pl     = pull --ff
  plr    = pull --rebase
  ps     = push
  psu    = !git push -u origin "$(git rev-parse --abbrev-ref HEAD)"
  gr     = grep -I

[push]
  default = simple

[core]
  editor = vim +1 -c 'set fenc=utf-8'
  preloadindex = true
  pager = /usr/share/git/diff-highlight/diff-highlight | less -x2

[help]
  autocorrect = -1

[url "git@github.com:"]
  pushinsteadof = "git://github.com/"
  pushinsteadof = "https://github.com"

[rebase]
  autosquash = true

[github]
  user = pocke

[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line

[ghq]
  root = ~/ghq
  root = ~/go/src
  root = ~/.vim/bundle/

[merge]
  ff = false

[web]
  browser = xdg-open

[browse-remote "github.com"]
	top = https://{host}/{path}
	ref = https://{host}/{path}/tree/{short_ref}
	rev = https://{host}/{path}/commit/{commit}
	pr = https://{host}/{path}/pull/{short_ref}
	file = "https://{host}/{path}/{file.directory? and :tree or :blob}/{short_rev}/{file}{lines && \"#L%s\" % lines.join(\"-\")}"
